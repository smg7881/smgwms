<div class="login-bg flex items-center justify-center min-h-screen">
  <div class="w-full max-w-[420px] bg-bg-secondary border border-border rounded-xl p-10">
    <div class="flex items-center gap-2.5 font-bold text-xl text-text-primary mb-8">
      <div class="w-9 h-9 bg-accent text-white rounded-md flex items-center justify-center font-black text-xl shrink-0">W</div>
      <span>WMS Pro</span>
    </div>

    <div class="text-[15px] font-semibold text-accent mb-5">로그인</div>

    <% if flash[:alert] %>
      <div class="bg-accent-rose/10 border border-accent-rose rounded-md px-4 py-3 mb-5">
        <h4 class="text-[13px] font-semibold text-accent-rose"><%= flash[:alert] %></h4>
      </div>
    <% end %>

    <%= form_with url: session_path, method: :post do |f| %>
      <div class="mb-5">
        <label class="block mb-1.5 text-[13px] font-semibold text-text-secondary" for="email_address">이메일</label>
        <input type="email" name="email_address" id="email_address"
               class="w-full bg-bg-primary border border-border rounded-md py-2 px-3 text-text-primary text-sm outline-none focus:border-accent transition-colors duration-150 placeholder:text-text-muted font-sans"
               placeholder="이메일을 입력하세요"
               value="<%= params[:email_address] %>" autofocus required>
      </div>

      <div class="mb-5">
        <label class="block mb-1.5 text-[13px] font-semibold text-text-secondary" for="password">비밀번호</label>
        <input type="password" name="password" id="password"
               class="w-full bg-bg-primary border border-border rounded-md py-2 px-3 text-text-primary text-sm outline-none focus:border-accent transition-colors duration-150 placeholder:text-text-muted font-sans"
               placeholder="비밀번호를 입력하세요" required>
      </div>

      <div class="mt-2">
        <button type="submit" class="btn btn-primary btn-login">확인</button>
      </div>
    <% end %>
  </div>
</div>
