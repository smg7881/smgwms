<%# app/views/shared/resource_form/_buttons.html.erb %>
<div class="flex justify-end gap-2 mt-2 col-[1/-1] min-w-0" data-resource-form-target="buttonGroup">
  <%# 취소 URL이 있으면 취소 버튼(링크) 표시 %>
  <% if cancel_url.present? %>
    <%= link_to "취소", cancel_url, class: "btn btn-secondary" %>
  <% end %>

  <%# 폼 초기화 버튼: resource-form#reset 액션 연결 %>
  <button type="button" class="btn btn-secondary"
          data-action="resource-form#reset"
          data-resource-form-target="resetBtn">
    초기화
  </button>

  <%# 저장 버튼: 로딩 중 텍스트/스피너 전환을 위한 타겟 설정 %>
  <button type="submit" class="btn btn-primary"
          data-resource-form-target="submitBtn">
    <span data-resource-form-target="submitText"><%= submit_label %></span>
    <%# 로딩 스피너 (기본 숨김) %>
    <span class="inline-flex items-center ml-1 hidden" data-resource-form-target="submitSpinner" hidden>
      <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
        <circle cx="8" cy="8" r="6" stroke="currentColor" stroke-width="2" stroke-dasharray="28" stroke-dashoffset="8">
          <animateTransform attributeName="transform" type="rotate" from="0 8 8" to="360 8 8" dur="0.8s" repeatCount="indefinite"/>
        </circle>
      </svg>
    </span>
  </button>
</div>
