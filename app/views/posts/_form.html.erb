<%= render Ui::ResourceFormComponent.new(
  model: post,
  fields: [
    {
      field: "title",
      type: "input",
      label: "제목",
      placeholder: "제목을 입력하세요",
      required: true,
      span: "24"
    },
    {
      field: "content",
      type: "textarea",
      label: "내용",
      placeholder: "내용을 입력하세요",
      rows: 8,
      span: "24"
    }
  ],
  submit_label: post.new_record? ? "작성하기" : "수정하기",
  cancel_url: posts_path
) %>

