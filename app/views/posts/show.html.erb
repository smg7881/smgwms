<%= turbo_frame_tag "main-content" do %>
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-xl font-bold text-text-primary"><%= @post.title %></h2>
    <div class="flex gap-2">
      <%= link_to "수정", edit_post_path(@post), class: "btn btn-secondary" %>
      <%= button_to "삭제", post_path(@post), method: :delete,
            class: "btn btn-danger",
            data: { turbo_confirm: "정말 삭제하시겠습니까?" } %>
      <%= link_to "목록으로", posts_path, class: "btn btn-secondary" %>
    </div>
  </div>

  <div class="bg-bg-secondary border border-border rounded-lg p-6">
    <div class="flex gap-4 mb-4 pb-4 border-b border-border text-xs text-text-muted font-mono">
      <span>작성일: <%= @post.created_at.strftime("%Y-%m-%d %H:%M") %></span>
      <% if @post.updated_at != @post.created_at %>
        <span>수정일: <%= @post.updated_at.strftime("%Y-%m-%d %H:%M") %></span>
      <% end %>
    </div>
    <div class="text-text-primary leading-[1.8]">
      <%= simple_format(@post.content) %>
    </div>
  </div>
<% end %>
