<div data-controller="location-grid"
     data-action="ag-grid:ready->location-grid#registerGrid"
     data-location-grid-batch-url-value="<%= batch_save_url %>"
     data-location-grid-areas-url-value="<%= areas_url %>"
     data-location-grid-zones-url-value="<%= zones_url %>">
  <%= render Ui::SearchFormComponent.new(
    url: create_url,
    fields: search_fields,
    cols: 4,
    enable_collapse: true
  ) %>

  <div class="flex items-center justify-between gap-3 mb-3 mt-6">
    <h3 class="inline-flex items-center gap-2 text-[15px] font-semibold text-text-primary">
      <%= helpers.lucide_icon("map-pin", css_class: "w-4 h-4 text-text-secondary") %>
      로케이션 목록
      <%= render Ui::GridActionsComponent.new(grid_id: "wm-location") %>
    </h3>
    <%= render Ui::GridToolbarComponent.new(
      buttons: [
        { label: "행추가", class: "btn btn-sm btn-primary", action: "click->location-grid#addRow" },
        { label: "행삭제", class: "btn btn-sm btn-danger", action: "click->location-grid#deleteRows" },
        { label: "저장", class: "btn btn-sm btn-success", action: "click->location-grid#saveRows" }
      ]
    ) %>
  </div>

  <%= render Ui::AgGridComponent.new(
    columns: columns,
    url: grid_url,
    height: "calc(100vh - 370px)",
    page_size: 20,
    row_selection: "multiple",
    grid_id: "wm-location",
    data: { location_grid_target: "grid" }
  ) %>
</div>
