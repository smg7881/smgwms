<div data-controller="area-grid"
     data-action="ag-grid:ready->area-grid#registerGrid"
     data-area-grid-batch-url-value="<%= batch_save_url %>"
     data-area-grid-workplace-map-value="<%= workplace_name_map.to_json %>">
  <%= render Ui::SearchFormComponent.new(
    url: create_url,
    fields: search_fields,
    cols: 3,
    enable_collapse: true
  ) %>

  <div class="flex items-center justify-between gap-3 mb-3 mt-6">
    <h3 class="inline-flex items-center gap-2 text-[15px] font-semibold text-text-primary">
      <%= helpers.lucide_icon("map", css_class: "w-4 h-4 text-text-secondary") %>
      AREA 목록
      <%= render Ui::GridActionsComponent.new(grid_id: "wm-area") %>
    </h3>
    <%= render Ui::GridToolbarComponent.new(
      buttons: [
        { label: "행추가", class: "btn btn-sm btn-primary", action: "click->area-grid#addRow" },
        { label: "행삭제", class: "btn btn-sm btn-danger", action: "click->area-grid#deleteRows" },
        { label: "저장", class: "btn btn-sm btn-success", action: "click->area-grid#saveRows" }
      ]
    ) %>
  </div>

  <%= render Ui::AgGridComponent.new(
    columns: columns,
    url: grid_url,
    height: "calc(100vh - 370px)",
    page_size: 20,
    row_selection: "multiple",
    grid_id: "wm-area",
    data: { area_grid_target: "grid" }
  ) %>
</div>
