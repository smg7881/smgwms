<div data-controller="workplace-grid"
     data-action="ag-grid:ready->workplace-grid#registerGrid"
     data-workplace-grid-batch-url-value="<%= batch_save_url %>">
  <%= render Ui::SearchFormComponent.new(
    url: create_url,
    fields: search_fields,
    cols: 3,
    enable_collapse: true
  ) %>

  <%= render Ui::GridHeaderComponent.new(
    icon: "map-pinned", title: "작업장 목록", grid_id: "workplace",
    buttons: [
      { label: "행추가", class: "btn btn-sm btn-primary", action: "click->workplace-grid#addRow" },
      { label: "행삭제", class: "btn btn-sm btn-danger", action: "click->workplace-grid#deleteRows" },
      { label: "저장", class: "btn btn-sm btn-success", action: "click->workplace-grid#saveRows" }
    ]
  ) %>

  <%= render Ui::AgGridComponent.new(
    columns: columns,
    url: grid_url,
    height: "calc(100vh - 370px)",
    page_size: 20,
    row_selection: "multiple",
    grid_id: "workplace",
    data: { workplace_grid_target: "grid" }
  ) %>
</div>
