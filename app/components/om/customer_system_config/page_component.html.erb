<div data-controller="om-customer-system-config-grid"
     data-action="ag-grid:ready->om-customer-system-config-grid#registerGrid"
     data-om-customer-system-config-grid-batch-url-value="<%= batch_save_url %>">
  <%= render Ui::SearchFormComponent.new(
    url: create_url,
    fields: search_fields,
    cols: 4,
    enable_collapse: true
  ) %>

  <div class="flex items-center justify-between gap-3 mb-3 mt-2">
    <h3 class="inline-flex items-center gap-2 text-[15px] font-semibold text-text-primary whitespace-nowrap shrink-0">
      <%= helpers.lucide_icon("settings-2", css_class: "w-4 h-4 text-text-secondary") %>
      고객별 시스템 설정 목록
      <%= render Ui::GridActionsComponent.new(grid_id: "om-customer-system-config") %>
    </h3>
    <%= render Ui::GridToolbarComponent.new(
      buttons: [
        { label: "추가", class: "btn btn-sm btn-primary", action: "click->om-customer-system-config-grid#addRow" },
        { label: "삭제", class: "btn btn-sm btn-danger", action: "click->om-customer-system-config-grid#deleteRows" },
        { label: "저장", class: "btn btn-sm btn-success", action: "click->om-customer-system-config-grid#saveRows" }
      ]
    ) %>
  </div>

  <%= render Ui::AgGridComponent.new(
    columns: columns,
    url: grid_url,
    height: "calc(100vh - 380px)",
    page_size: 20,
    row_selection: "multiple",
    grid_id: "om-customer-system-config",
    data: { om_customer_system_config_grid_target: "grid" }
  ) %>
</div>
