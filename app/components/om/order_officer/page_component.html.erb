<div data-controller="om-order-officer-grid"
     data-action="ag-grid:ready->om-order-officer-grid#registerGrid ag-grid:lookup-selected->om-order-officer-grid#handleLookupSelected"
     data-om-order-officer-grid-batch-url-value="<%= batch_save_url %>">
  <%= render Ui::SearchFormComponent.new(
    url: create_url,
    fields: search_fields,
    cols: 4,
    enable_collapse: true
  ) %>

  <%= render Ui::GridHeaderComponent.new(
    icon: "users", title: "오더담당자 목록", grid_id: "om-order-officer",
    buttons: [
      { label: "추가", class: "btn btn-sm btn-primary", action: "click->om-order-officer-grid#addRow" },
      { label: "삭제", class: "btn btn-sm btn-danger", action: "click->om-order-officer-grid#deleteRows" },
      { label: "저장", class: "btn btn-sm btn-success", action: "click->om-order-officer-grid#saveRows" }
    ]
  ) %>

  <%= render Ui::AgGridComponent.new(
    columns: columns,
    url: grid_url,
    height: "calc(100vh - 380px)",
    page_size: 20,
    row_selection: "multiple",
    grid_id: "om-order-officer",
    data: { om_order_officer_grid_target: "grid" }
  ) %>
</div>
