<div data-controller="std-approval-grid"
     data-action="ag-grid:ready->std-approval-grid#registerGrid"
     data-std-approval-grid-batch-url-value="<%= batch_save_url %>">
  <%= render Ui::SearchFormComponent.new(
    url: create_url,
    fields: search_fields,
    cols: 4,
    enable_collapse: true
  ) %>

  <%= render Ui::GridHeaderComponent.new(
    icon: "file-check", title: "결재관리 목록", grid_id: "std-approval",
    buttons: [
      { label: "행추가", class: "btn btn-sm btn-primary", action: "click->std-approval-grid#addRow" },
      { label: "행삭제", class: "btn btn-sm btn-danger", action: "click->std-approval-grid#deleteRows" },
      { label: "저장", class: "btn btn-sm btn-success", action: "click->std-approval-grid#saveRows" }
    ]
  ) %>

  <%= render Ui::AgGridComponent.new(
    columns: columns,
    url: grid_url,
    height: "calc(100vh - 370px)",
    page_size: 20,
    row_selection: "multiple",
    grid_id: "std-approval",
    data: { std_approval_grid_target: "grid" }
  ) %>
</div>
