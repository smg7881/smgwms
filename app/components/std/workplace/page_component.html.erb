<div data-controller="std-workplace-crud"
     data-std-workplace-crud-create-url-value="<%= create_url %>"
     data-std-workplace-crud-update-url-value="<%= update_url %>"
     data-std-workplace-crud-delete-url-value="<%= delete_url %>">
  <%= render Ui::SearchFormComponent.new(
    url: create_url,
    fields: search_fields,
    cols: 4,
    enable_collapse: true
  ) %>

  <%= render Ui::GridHeaderComponent.new(
    icon: "map-pinned", title: "작업장 목록", grid_id: "std-workplace",
    buttons: [
      { label: "작업장관리 추가", class: "btn btn-sm btn-primary", action: "click->std-workplace-crud#openCreate" }
    ]
  ) %>

  <%= render Ui::AgGridComponent.new(
    columns: columns,
    url: grid_url,
    height: "calc(100vh - 370px)",
    page_size: 20,
    grid_id: "std-workplace"
  ) %>

  <%= render Ui::ModalShellComponent.new(
    controller: "std-workplace-crud",
    title: "작업장관리 추가",
    save_form_id: "std-workplace-crud-form",
    cancel_role: "cancel",
    save_role: "save",
    width: "900px"
  ) do |modal| %>
    <% modal.with_body do %>
      <input type="hidden" data-std-workplace-crud-target="fieldId" />

      <%= render Ui::ResourceFormComponent.new(
        model: StdWorkplace.new,
        url: "#",
        cols: 2,
        show_buttons: false,
        target_controller: "std_workplace_crud",
        fields: form_fields,
        form_data: {
          std_workplace_crud_target: "form",
          action: "submit->resource-form#submit submit->std-workplace-crud#submit"
        },
        form_html: {
          id: "std-workplace-crud-form",
          novalidate: true,
          autocomplete: "off"
        }
      ) %>
    <% end %>
  <% end %>
</div>
