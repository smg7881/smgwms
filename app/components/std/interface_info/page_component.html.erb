<div data-controller="std-interface-info-grid"
     data-action="ag-grid:ready->std-interface-info-grid#registerGrid"
     data-std-interface-info-grid-batch-url-value="<%= batch_save_url %>">
  <%= render Ui::SearchFormComponent.new(
    url: create_url,
    fields: search_fields,
    cols: 4,
    enable_collapse: true
  ) %>

  <%= render Ui::GridHeaderComponent.new(
    icon: "workflow", title: "인터페이스 정보 목록", grid_id: "std-interface-info",
    buttons: [
      { label: "추가", class: "btn btn-sm btn-primary", action: "click->std-interface-info-grid#addRow" },
      { label: "삭제", class: "btn btn-sm btn-danger", action: "click->std-interface-info-grid#deleteRows" },
      { label: "저장", class: "btn btn-sm btn-success", action: "click->std-interface-info-grid#saveRows" }
    ]
  ) %>

  <%= render Ui::AgGridComponent.new(
    columns: columns,
    url: grid_url,
    height: "calc(100vh - 360px)",
    page_size: 20,
    row_selection: "multiple",
    grid_id: "std-interface-info",
    data: { std_interface_info_grid_target: "grid" }
  ) %>
</div>
