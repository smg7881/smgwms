<div data-controller="std-holiday-grid"
     data-action="ag-grid:ready->std-holiday-grid#registerGrid"
     data-std-holiday-grid-batch-url-value="<%= batch_save_url %>"
     data-std-holiday-grid-generate-weekends-url-value="<%= generate_weekends_url %>">
  <%= render Ui::SearchFormComponent.new(
    url: create_url,
    fields: search_fields,
    cols: 3,
    enable_collapse: true
  ) %>

  <%= render Ui::GridHeaderComponent.new(
    icon: "calendar-days", title: "공휴일 목록", grid_id: "std-holiday",
    buttons: [
      { label: "행추가", class: "btn btn-sm btn-primary", action: "click->std-holiday-grid#addRow" },
      { label: "행삭제", class: "btn btn-sm btn-danger", action: "click->std-holiday-grid#deleteRows" },
      { label: "토/일생성", class: "btn btn-sm btn-secondary", action: "click->std-holiday-grid#generateWeekends" },
      { label: "저장", class: "btn btn-sm btn-success", action: "click->std-holiday-grid#saveRows" }
    ]
  ) %>

  <%= render Ui::AgGridComponent.new(
    columns: columns,
    url: grid_url,
    height: "calc(100vh - 370px)",
    page_size: 20,
    row_selection: "multiple",
    grid_id: "std-holiday",
    data: { std_holiday_grid_target: "grid" }
  ) %>
</div>
