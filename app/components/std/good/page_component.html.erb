<div data-controller="std-good-grid"
     data-action="ag-grid:ready->std-good-grid#registerGrid"
     data-std-good-grid-batch-url-value="<%= batch_save_url %>">
  <%= render Ui::SearchFormComponent.new(
    url: create_url,
    fields: search_fields,
    cols: 3,
    enable_collapse: true
  ) %>

  <%= render Ui::GridHeaderComponent.new(
    icon: "package", title: "품명 목록", grid_id: "std-goods",
    buttons: [
      { label: "추가", class: "btn btn-sm btn-primary", action: "click->std-good-grid#addRow" },
      { label: "삭제", class: "btn btn-sm btn-danger", action: "click->std-good-grid#deleteRows" },
      { label: "저장", class: "btn btn-sm btn-success", action: "click->std-good-grid#saveRows" }
    ]
  ) %>

  <%= render Ui::AgGridComponent.new(
    columns: columns,
    url: grid_url,
    height: "calc(100vh - 360px)",
    page_size: 20,
    row_selection: "multiple",
    grid_id: "std-goods",
    data: { std_good_grid_target: "grid" }
  ) %>
</div>
