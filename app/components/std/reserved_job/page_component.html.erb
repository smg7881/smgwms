<div data-controller="std-reserved-job-grid"
     data-action="ag-grid:ready->std-reserved-job-grid#registerGrid"
     data-std-reserved-job-grid-batch-url-value="<%= batch_save_url %>">
  <%= render Ui::SearchFormComponent.new(
    url: create_url,
    fields: search_fields,
    cols: 3,
    enable_collapse: true
  ) %>

  <%= render Ui::GridHeaderComponent.new(
    icon: "calendar-clock", title: "예약작업 목록", grid_id: "std-reserved-job",
    buttons: [
      { label: "추가", class: "btn btn-sm btn-primary", action: "click->std-reserved-job-grid#addRow" },
      { label: "삭제", class: "btn btn-sm btn-danger", action: "click->std-reserved-job-grid#deleteRows" },
      { label: "저장", class: "btn btn-sm btn-success", action: "click->std-reserved-job-grid#saveRows" }
    ]
  ) %>

  <%= render Ui::AgGridComponent.new(
    columns: columns,
    url: grid_url,
    height: "calc(100vh - 360px)",
    page_size: 20,
    row_selection: "multiple",
    grid_id: "std-reserved-job",
    data: { std_reserved_job_grid_target: "grid" }
  ) %>
</div>
