<div data-controller="std-sellbuy-attribute-crud"
     data-std-sellbuy-attribute-crud-create-url-value="<%= create_url %>"
     data-std-sellbuy-attribute-crud-update-url-value="<%= update_url %>"
     data-std-sellbuy-attribute-crud-delete-url-value="<%= delete_url %>">
  <%= render Ui::SearchFormComponent.new(
    url: create_url,
    fields: search_fields,
    cols: 4,
    enable_collapse: true
  ) %>

  <div class="flex items-center justify-between gap-3 mb-3 mt-2">
    <h3 class="inline-flex items-center gap-2 text-[15px] font-semibold text-text-primary">
      <%= helpers.lucide_icon("tags", css_class: "w-4 h-4 text-text-secondary") %>
      매출입항목 목록
      <%= render Ui::GridActionsComponent.new(grid_id: "std-sellbuy-attribute") %>
    </h3>
    <%= render Ui::GridToolbarComponent.new(
      buttons: [
        { label: "항목추가", class: "btn btn-sm btn-primary", action: "click->std-sellbuy-attribute-crud#openCreate" }
      ]
    ) %>
  </div>

  <%= render Ui::AgGridComponent.new(
    columns: columns,
    url: grid_url,
    height: "calc(100vh - 370px)",
    page_size: 20,
    grid_id: "std-sellbuy-attribute"
  ) %>

  <%= render Ui::ModalShellComponent.new(
    controller: "std-sellbuy-attribute-crud",
    title: "매출입항목 추가",
    save_form_id: "std-sellbuy-attribute-crud-form",
    cancel_role: "cancel",
    save_role: "save",
    width: "1200px"
  ) do |modal| %>
    <% modal.with_body do %>
      <input type="hidden" data-std-sellbuy-attribute-crud-target="fieldId" />

      <%= render Ui::ResourceFormComponent.new(
        model: StdSellbuyAttribute.new,
        url: "#",
        cols: 2,
        show_buttons: false,
        target_controller: "std_sellbuy_attribute_crud",
        fields: form_fields,
        form_data: {
          std_sellbuy_attribute_crud_target: "form",
          action: "submit->resource-form#submit submit->std-sellbuy-attribute-crud#submit"
        },
        form_html: {
          id: "std-sellbuy-attribute-crud-form",
          novalidate: true,
          autocomplete: "off"
        }
      ) %>
    <% end %>
  <% end %>
</div>
