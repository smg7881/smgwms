<%= render Ui::ModalShellComponent.new(
  controller: "user-crud",
  title: "사용자 추가",
  save_form_id: "user-crud-form",
  cancel_role: "cancel",
  save_role: "save"
) do |modal| %>
  <% modal.with_body do %>
      <input type="hidden" data-user-crud-target="fieldId" />

      <%= render Ui::ResourceFormComponent.new(
        model: User.new,
        url: "#",
        cols: 2,
        show_buttons: false,
        target_controller: "user_crud",
        fields: fields,
        form_data: {
          user_crud_target: "form",
          action: "submit->resource-form#submit submit->user-crud#submitUser"
        },
        form_html: {
          id: "user-crud-form",
          novalidate: true,
          autocomplete: "off"
        }
      ) %>
  <% end %>
<% end %>
