<div data-controller="user-crud"
     data-user-crud-create-url-value="<%= create_url %>"
     data-user-crud-update-url-value="<%= update_url %>"
     data-user-crud-delete-url-value="<%= delete_url %>"
     data-user-crud-check-id-url-value="<%= check_id_url %>"
     data-user-crud-excel-export-url-value="<%= excel_export_url %>"
     data-user-crud-excel-template-url-value="<%= excel_template_url %>"
     data-user-crud-import-history-url-value="<%= import_history_url %>">
  <%= render Ui::SearchFormComponent.new(
    url: create_url,
    fields: search_fields,
    cols: 3,
    enable_collapse: true
  ) %>

  <div class="flex items-center justify-between gap-3 mb-3 mt-2">
    <h3 class="inline-flex items-center gap-2 text-[15px] font-semibold text-text-primary">
      <%= helpers.lucide_icon("users", css_class: "w-4 h-4 text-text-secondary") %>
      사용자 목록
      <%= render Ui::GridActionsComponent.new(grid_id: "users", excel_action: "click->user-crud#downloadExcel") %>
    </h3>
    <%= render Ui::GridToolbarComponent.new(
      buttons: [
        { label: "엑셀양식", class: "btn btn-sm btn-secondary", action: "click->user-crud#downloadExcelTemplate" },
        { label: "엑셀다운로드", class: "btn btn-sm btn-secondary", action: "click->user-crud#downloadExcel" },
        { label: "엑셀업로드", class: "btn btn-sm btn-secondary", action: "click->user-crud#openExcelImport" },
        { label: "업로드이력", class: "btn btn-sm btn-secondary", action: "click->user-crud#openImportHistory" },
        { label: "사용자추가", class: "btn btn-sm btn-primary", action: "click->user-crud#openCreate" }
      ]
    ) %>
  </div>

  <%= render Ui::AgGridComponent.new(
    columns: columns,
    url: grid_url,
    height: "calc(100vh - 370px)",
    page_size: 20,
    grid_id: "users"
  ) %>

  <%= render Ui::ModalShellComponent.new(
    controller: "user-crud",
    title: "사용자 추가",
    save_form_id: "user-crud-form",
    cancel_role: "cancel",
    save_role: "save"
  ) do |modal| %>
    <% modal.with_body do %>
      <input type="hidden" data-user-crud-target="fieldId" />

      <%= render Ui::ResourceFormComponent.new(
        model: User.new,
        url: "#",
        cols: 2,
        show_buttons: false,
        target_controller: "user_crud",
        fields: form_fields,
        form_data: {
          user_crud_target: "form",
          action: "submit->resource-form#submit submit->user-crud#submit"
        },
        form_html: {
          id: "user-crud-form",
          novalidate: true,
          autocomplete: "off"
        }
      ) %>
    <% end %>
  <% end %>

  <form action="<%= excel_import_url %>"
        accept-charset="UTF-8"
        enctype="multipart/form-data"
        method="post"
        class="hidden"
        data-excel-import-form>
    <input type="hidden" name="authenticity_token" value="<%= helpers.form_authenticity_token %>">
    <input type="file"
           name="file"
           accept=".xlsx,.csv"
           data-action="change->user-crud#submitExcelImport"
           data-excel-import-input>
  </form>
</div>
