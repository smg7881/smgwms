<div data-controller="user-crud"
     data-user-crud-create-url-value="<%= create_url %>"
     data-user-crud-update-url-value="<%= update_url %>"
     data-user-crud-delete-url-value="<%= delete_url %>"
     data-user-crud-check-id-url-value="<%= check_id_url %>">
  <%= render Ui::SearchFormComponent.new(
    url: create_url,
    fields: search_fields,
    cols: 3,
    enable_collapse: true
  ) %>

  <%= render Ui::GridToolbarComponent.new(
    buttons: [
      { label: "사용자추가", class: "btn btn-sm btn-primary", action: "click->user-crud#openCreate" }
    ]
  ) %>

  <%= render Ui::AgGridComponent.new(
    columns: columns,
    url: grid_url,
    height: "calc(100vh - 370px)",
    page_size: 20
  ) %>

  <%= render System::Users::FormModalComponent.new %>
</div>
